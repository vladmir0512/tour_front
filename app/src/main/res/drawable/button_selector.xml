<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#B0BEC5"/> <!-- Цвет для неактивного состояния -->
            <corners android:radius="4dp"/> <!-- Радиус углов (по желанию) -->
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#2196F3"/> <!-- Цвет для активного состояния -->
            <corners android:radius="4dp"/> <!-- Радиус углов (по желанию) -->
        </shape>
    </item>
</selector>