<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Обычная тема -->
    <style name="NormalFontTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Тема с увеличенным шрифтом -->
    <style name="LargeFontTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">24sp</item>
    </style>


    <!-- Светлая тема -->
    <style name="AppTheme.Light" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#BFEFEFEF</item>
        <item name="colorPrimaryVariant">@color/avatar_background</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#FF4081</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item> <!-- Цвет поверхности -->
        <item name="colorOnSurface">#000000</item> <!-- Цвет текста на поверхности -->
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:statusBarColor">#2196F3</item>
        <item name="android:navigationBarColor">#2196F3</item>

    </style>

    <!-- Темная тема -->
    <style name="AppTheme.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/bel</item>
        <item name="colorPrimaryVariant">#1976D2</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#FF4081</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSurface">#121212</item> <!-- Цвет поверхности -->
        <item name="colorOnSurface">#FFFFFF</item> <!-- Цвет текста на поверхности -->
        <item name="android:windowBackground">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:statusBarColor">#1E88E5</item>
        <item name="android:navigationBarColor">#1E88E5</item>
    </style>

</resources>