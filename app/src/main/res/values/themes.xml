<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Светлая тема -->
    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#2196F3</item> <!-- Светло-голубой -->
        <item name="colorPrimaryVariant">#1976D2</item>
        <item name="colorOnPrimary">#FFFFFF</item> <!-- Белый текст на основном цвете -->
        <item name="colorSecondary">#FF4081</item> <!-- Розовый -->
        <item name="colorOnSecondary">#000000</item> <!-- Черный текст на вторичном цвете -->
        <item name="android:windowBackground">#FFFFFF</item> <!-- Белый фон -->
        <item name="android:textColor">#000000</item> <!-- Черный текст -->
    </style>

    <!-- Темная тема -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">#1E88E5</item> <!-- Темно-синий -->
        <item name="colorPrimaryVariant">#1976D2</item>
        <item name="colorOnPrimary">#FFFFFF</item> <!-- Белый текст на основном цвете -->
        <item name="colorSecondary">#FF4081</item> <!-- Розовый -->
        <item name="colorOnSecondary">#FFFFFF</item> <!-- Белый текст на вторичном цвете -->
        <item name="android:windowBackground">#000000</item> <!-- Черный фон -->
        <item name="android:textColor">#FFFFFF</item> <!-- Белый текст -->
    </style>


</resources>